{
  "name": "enhanced_sol_token_sniper",
  "version": "2.0.0",
  "main": "dist/main.js",
  "description": "Enhanced Solana Token Sniper v2.0 - Optimized for Speed and Performance",
  "author": "Enhanced by Assistant",
  "license": "MIT",

  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    
    "test:telegram": "ts-node src/test/telegram.test.ts",
    "test:balance": "ts-node src/test/balanceManager.test.ts",
    "test:all": "npm run test:telegram && npm run test:balance",
    
    "health-check": "ts-node src/utils/healthCheck.ts",
    "emergency-sell": "ts-node src/utils/emergencySell.ts",
    
    "balance:check": "ts-node -e \"import('./src/utils/handlers/balanceManager').then(({balanceManager}) => balanceManager.getFormattedBalanceInfo().then(console.log))\"",
    "balance:simulate": "ts-node -e \"import('./src/utils/handlers/balanceManager').then(({balanceManager}) => balanceManager.simulatePercentages([1,3,5,10,15,20]).then(r => console.table(r)))\"",
    
    "stats:api": "ts-node -e \"import('./src/core/apiClient').then(({apiClient}) => apiClient.logPerformanceStats())\"",
    "cache:stats": "ts-node -e \"import('./src/utils/tokenCache').then(({getTokenCacheStats}) => console.log(getTokenCacheStats()))\"",
    
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "clean:logs": "find . -name '*.log' -delete",
    "reset": "npm run clean && npm install"
  },

  "keywords": [
    "solana",
    "trading",
    "sniper", 
    "memecoin",
    "defi",
    "cryptocurrency",
    "automated-trading",
    "risk-management",
    "telegram-bot",
    "performance-optimized"
  ],

  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },

  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/ws": "^8.5.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },

  "dependencies": {
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.5",
    "axios": "^1.7.8",
    "dotenv": "^16.4.5",
    "ws": "^8.18.0"
  },

  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.3"
  },

  "repository": {
    "type": "git",
    "url": "enhanced-solana-sniper-v2"
  },

  "config": {
    "production": {
      "NODE_ENV": "production",
      "LOG_LEVEL": "info"
    },
    "development": {
      "NODE_ENV": "development", 
      "LOG_LEVEL": "debug"
    }
  },

  "files": [
    "dist/**/*",
    "src/**/*",
    "*.md",
    "package.json"
  ]
}